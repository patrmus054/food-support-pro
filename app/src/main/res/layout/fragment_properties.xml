<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="25dp">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Szearch"
            android:textSize="24dp"/>

    <TextView
        android:id="@+id/tv_properties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_search"
        android:layout_alignStart="@+id/et_search"
        android:layout_alignLeft="@+id/et_search"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="53dp"
        android:text="Points range:"
        android:textSize="22sp" />

    <RadioGroup
        android:id="@+id/rg_properties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_search"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="87dp">

        <RadioButton
            android:id="@+id/rg_0_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="0-30" />

        <RadioButton
            android:id="@+id/rg_40_79"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="40-79" />

        <RadioButton
            android:id="@+id/rg_80_119"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="80-119" />

        <RadioButton
            android:id="@+id/rg_120_140"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="120-140" />


    </RadioGroup>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_search"
        android:layout_marginStart="108dp"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="143dp"
        android:layout_toEndOf="@+id/rg_properties"
        android:layout_toRightOf="@+id/rg_properties"
        android:text="     ASC     "
        android:textSize="18dp" />

    <Button
        android:id="@+id/bt_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch1"
        android:layout_marginStart="-61dp"
        android:layout_marginLeft="-61dp"
        android:layout_marginTop="178dp"
        android:layout_toEndOf="@+id/rg_properties"
        android:layout_toRightOf="@+id/rg_properties"
        android:text="Cancel"
        android:textSize="22sp" />

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch1"
        android:layout_marginStart="117dp"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="176dp"
        android:layout_toEndOf="@+id/rg_properties"
        android:layout_toRightOf="@+id/rg_properties"
        android:text="Submit"
        android:textSize="22sp" />
</RelativeLayout>



